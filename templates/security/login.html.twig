{% extends 'accueil.twig' %}


{% block title %}Spéleonautes - Connectez-vous !{% endblock %}

{% block body %}
<h1 class="title">Spéléonautes</h1>
<blockquote>"La Grande Fosse est sans fond. La Grande Fosse est gigantesque. La Grande Fosse est source de richesses incommensurables pour qui ose y risquer sa vie." </blockquote>
<form class="log-in" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <label for="inputEmail">Courriel</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Connexion
    </button>
</form>
<div class="register"><a href="{{ path('app_register') }}">Créer un compte</a><a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a></div>
<div class="separateur"></div>
{{contenu_page.contenu | raw}}

{% endblock %}
