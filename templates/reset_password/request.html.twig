{% extends 'accueil.twig' %}


{% block title %}Mettre à jour votre mot de passe - Spéléonautes{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Mettre à jour votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <p>Saisir votre adresse e-mail pour recevoir un lien pour changer votre mot de passe.</p>
        </div>

        <button class="btn btn-primary">Envoyer la demande de mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}
